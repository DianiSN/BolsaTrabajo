<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_width="match_parent">

                <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="132dp"
                    android:layout_height="134dp"
                    android:id="@+id/imageView"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/samanta" />

                <GridLayout
                    android:layout_width="240dp"
                    android:layout_height="130dp"
                    android:layout_row="0"
                    android:layout_column="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Samanta Herrera ChÃ¡vez"
                        android:id="@+id/name"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:textAlignment="center" />

                    <Button
                        style="?android:attr/buttonStyleSmall"

                        android:text="Cambiar foto"
                        android:id="@+id/bfoto"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:padding="7dp"
                        android:layout_height="30dp"
                        android:background="@drawable/mybutton"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"/>
                </GridLayout>

            </GridLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.57"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="EXPERIENCIA"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/tvExp"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editExperiencia"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PROYECTOS"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/tvProy"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editPoyectos"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="HABILIDADES"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/tvHab"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editHabilidades"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="INTERESES"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/tvInt"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editIntereses"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ACTIVIDADES CURRICULARES"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/tvActividades"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editActividades"
                    android:layout_gravity="center_horizontal" />

                <GridLayout
                    android:layout_width="181dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <Button
                        android:layout_centerHorizontal="true"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="79dp"
                        android:layout_height="34dp"
                        android:text="Guardar"
                        android:id="@+id/bSave"
                        android:padding="1dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/mybutton"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="Cancelar"
                        android:id="@+id/bCancel"
                        android:padding="1dp"
                        android:background="@drawable/mybutton"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:layout_column="2" />

                </GridLayout>


            </LinearLayout>

            </LinearLayout>
    </ScrollView>
</LinearLayout>

